<h2>Ratings</h2>

<h3>Latest ratings
</h3>

<table class="table table-striped table-condensed">
  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <%# user = User.find(rating) %>
        <td> <%= rating.to_s %></td>
        <td><%= rating.user.username %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Top Beers</h3>

<%= render 'list', top: @top_beers %>

<h3>Top Breweries</h3>

<%= render 'list', top: @top_breweries %>

<h3>Users with most ratings</h3>

<table class="table table-striped table-condensed">
  <tbody>
    <% @top_users.each do |user| %>
      <tr>
        <td> <%= user.username %></td>
        <td><%= user.ratings.count %> </td>
      </tr>
    <% end %>
  </tbody>
</table>


