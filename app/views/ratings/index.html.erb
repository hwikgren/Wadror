<h2>Ratings</h2>

<p> Number of ratings
  <%= @ratings.count %>
</p>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Beer Score</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do | rating| %>
      <tr>
        <% user = User.find(rating.user_id) %>
        <td> <%= rating.to_s %></td> 
        <td><%= link_to user.username, user %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%#= link_to 'New rating', new_rating_path %>
