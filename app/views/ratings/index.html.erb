<h2>Ratings</h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-4"> 
      <h3>Top Beers</h3>
      <%= render 'list', top: @top_beers %>
    </div>
    <div class="col-md-4">
      <h3>Top Breweries</h3>
      <%= render 'list', top: @top_breweries %>
    </div>
    <div class="col-md-4">
      <h3>Top Styles</h3>
      <%= render 'list', top: @top_styles %>
    </div>
  </div>
</div>

<h3>Users with most ratings</h3>
<table class="table table-striped table-condensed">
  <thead>                  
    <th>Name</th>
    <th>Favorite beer</th>
    <th>Favorite style</th>
    <th>Favorite brewery</th>
    <th>Ratings</th>
  </thead>
  <tbody>
    <% @top_users.each do |user| %>
      <tr>
        <td> <%= user.username %></td>
        <td> <%= user.favorite_beer %></td>
        <td> <%= user.favorite_style %></td>
        <td> <%= user.favorite_brewery %></td>
        <td><%= user.ratings.count %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Latest ratings</h3>

<table class="table table-striped table-condensed">
  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <%# user = User.find(rating) %>
        <td> <%= rating.to_s %></td>
        <td><%= rating.user.username %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

