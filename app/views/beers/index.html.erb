<p id="notice"><%= notice %></p>

<h2>Beers</h2>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th> <%= link_to 'Name', beers_path(order:"name") %></th>
      <th> <%= link_to 'Style', beers_path(order:"style") %></th>
      <th> <%= link_to 'Brewery', beers_path(order:"brewery") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <% style = Style.find(beer.style_id) %>
        <td><%= link_to style.name, style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <td><%= edit_and_destroy_buttons(beer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path, class:"btn-sm btn-primary") if current_user %>
