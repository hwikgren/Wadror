<p id="notice"><%= notice %></p>

<h1>Styles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_style_path(style), class:"btn-sm btn-primary" %></td>
          <td><%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Style', new_style_path, class:"btn-sm btn-primary") if current_user %>
