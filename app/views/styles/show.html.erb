<p id="notice"><%= notice %></p>

<h1>
  <%= @style.name %>
</h1>

<p>
  <%= @style.description %>
</p>

<h4>Beers</h4>
<table class="table table-striped table-condensed">
  <thead>
    <th>Name</th>
    <th>Brewery</th>
  </thead>
  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br /><br />

<% if current_user %>
  <%= link_to 'Edit', edit_style_path(@style), class:"btn-sm btn-primary" %>
<% end %>
<%= link_to 'Back', styles_path, class:"btn-sm btn-primary" %>
